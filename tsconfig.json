{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": [
    "**/*.ts",
    "3.tsx"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}